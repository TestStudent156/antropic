# OpenClaw Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# Container Image
OPENCLAW_IMAGE=openclaw:local

# Gateway Configuration
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_GATEWAY_BIND=lan

# Data Directories (Synology paths)
OPENCLAW_CONFIG_DIR=/volume2/docker/openclaw/config
OPENCLAW_WORKSPACE_DIR=/volume2/docker/openclaw/workspace

# Authentication (generate with: openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=your-token-here

# API Keys (fill in your actual keys)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
GOOGLE_API_KEY=your-google-api-key
GROQ_API_KEY=your-groq-api-key

# Optional Claude credentials
# CLAUDE_AI_SESSION_KEY=
# CLAUDE_WEB_SESSION_KEY=
# CLAUDE_WEB_COOKIE=
